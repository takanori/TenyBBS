: cascade "include/layout.tx"

: override content -> {

<h1>Threads</h1>
<a href="<: uri_for('/thread/new') :>">new thread</a>

<br>
<br>

: for $threads -> $th {
  <div class="thread">
    <h3><a href="<: uri_for('/thread/' ~ $th.id) :>"><: $th.title :></a></h3>
    <p><: $th.content :></p>
  </div>
: }

: }
